<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #79B079;" xmlns="http://javafx.com/javafx/8"
            fx:controller="clue.view.Clue">
    <center>
        <VBox alignment="CENTER" maxWidth="-Infinity" prefHeight="200.0" prefWidth="500.0" spacing="20.0"
              BorderPane.alignment="CENTER">
            <Text fill="#224322" strokeType="OUTSIDE" strokeWidth="0.0" text="Settings">
                <font>
                    <Font name="Arial Black" size="96.0"/>
                </font>
            </Text>
            <ToggleButton fx:id="settingsMenuFullscreen" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                          onAction="#handleSettingsMenuFullscreen" prefHeight="50.0" text="Fullscreen?">
                <font>
                    <Font name="Arial Black" size="24.0"/>
                </font>
            </ToggleButton>
            <ToggleButton fx:id="settingsMenuSound" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                          onAction="#handleSettingsMenuSound" text="Sound?">
                <font>
                    <Font name="Arial Black" size="24.0"/>
                </font>
            </ToggleButton>
        </VBox>
    </center>
    <left>
        <Button fx:id="settingsMenuBack" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false"
                onAction="#handleSettingsMenuBack" prefHeight="200.0" prefWidth="200.0" text="Back"
                BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="50.0"/>
            </BorderPane.margin>
        </Button>
    </left>
    <right>
        <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0"
                text="Button" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets right="50.0"/>
            </BorderPane.margin>
        </Button>
    </right>
</BorderPane>
